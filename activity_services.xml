<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".Services">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="135dp">
            <android.support.v7.widget.CardView
                android:clickable="true"
                android:id="@+id/idconstruction"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_centerInParent="true"
                        android:src="@drawable/construction"
                        android:layout_width="140dp"
                        android:layout_height="80dp" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:text="Construction"
                        android:textColor="#008577"
                        android:typeface="serif"
                        android:textSize="16sp"
                        android:layout_below="@+id/image1"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:id="@+id/idFacade_Work"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_centerInParent="true"
                        android:src="@drawable/facade_work"
                        android:layout_width="140dp"
                        android:layout_height="80dp" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:text="Facade Work"
                        android:textColor="#008577"
                        android:typeface="serif"
                        android:textSize="16sp"
                        android:layout_below="@+id/image2"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="135dp">
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:id="@+id/idAsp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image3"
                        android:layout_centerInParent="true"
                        android:src="@drawable/facade_work"
                        android:layout_width="140dp"
                        android:layout_height="80dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="ACP"
                        android:textColor="#008577"
                        android:typeface="serif"
                            android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_below="@+id/image3"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:id="@+id/idNdt"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image4"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ndt"
                        android:layout_width="140dp"
                        android:layout_height="80dp" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:text="NDT Testing"
                        android:textColor="#008577"
                        android:typeface="serif"
                        android:textSize="16sp"
                        android:layout_below="@+id/image4"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="135dp">
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:id="@+id/idglassclening"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_centerInParent="true"
                        android:src="@drawable/glass_cleaning"
                        android:layout_width="140dp"
                        android:layout_height="80dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Glass Cleaning"
                        android:textStyle="bold"
                        android:textColor="#008577"
                        android:typeface="serif"
                        android:textSize="16sp"
                        android:layout_below="@+id/image5"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:clickable="true"
                android:id="@+id/idretrofitting"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image6"
                        android:layout_centerInParent="true"
                        android:src="@drawable/retrofitting"
                        android:layout_width="140dp"
                        android:layout_height="80dp" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:text="Retrofitting"
                        android:textColor="#008577"
                        android:typeface="serif"
                        android:textSize="16sp"
                        android:layout_below="@+id/image6"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="180dp"
            android:layout_height="135dp">
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:id="@+id/idwaterproofing"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_centerInParent="true"
                        android:src="@drawable/waterproofing"
                        android:layout_width="140dp"
                        android:layout_height="80dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Waterproofing"
                        android:textStyle="bold"
                        android:textColor="#008577"
                        android:typeface="serif"
                        android:textSize="16sp"
                        android:layout_below="@+id/image7"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>