<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#EBE5E5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:background="#EBE5E5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/background"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="230dp">

                    <TextView
                        android:visibility="invisible"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:text="Rk INFRA"
                        android:textColor="#F7E119"
                        android:typeface="serif"
                        android:textSize="22dp"
                        android:layout_marginLeft="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="215dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="135dp">
                        <android.support.v7.widget.CardView
                            android:clickable="true"
                            android:id="@+id/idaboutmyself"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/image1"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/bug"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="About Us "
                                    android:textColor="#008577"
                                    android:typeface="serif"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/image1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:clickable="true"
                            android:id="@+id/idServices"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/image2"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/bitcoin"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Services"
                                    android:textColor="#008577"
                                    android:typeface="serif"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/image2"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="135dp">
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:clickable="true"
                            android:id="@+id/idourproducts"
                            android:layout_marginRight="5dp"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/image3"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/bookmark"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Our Projects "
                                    android:textColor="#008577"
                                    android:typeface="serif"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/image3"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:clickable="true"
                            android:id="@+id/idContatcUs"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/image4"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/contact"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Contact Us "
                                    android:textColor="#008577"
                                    android:typeface="serif"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/image4"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="135dp">
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:clickable="true"
                            android:id="@+id/idMissionCard"
                            android:layout_marginRight="5dp"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/image8"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/mission"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Mission  "
                                    android:textColor="#008577"
                                    android:typeface="serif"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/image8"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:clickable="true"
                            android:id="@+id/idVisionCard"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/image7"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/vision"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Vision "
                                    android:textColor="#008577"
                                    android:typeface="serif"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/image7"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="wrap_content" />


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="135dp">
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:clickable="true"
                            android:id="@+id/idFollow_us"
                            android:layout_marginRight="5dp"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/image5"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/chat"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Follow Us "
                                    android:textColor="#008577"
                                    android:typeface="serif"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/image5"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:clickable="true"
                            android:id="@+id/idshare"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/image6"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/share"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Share Us"
                                    android:textColor="#008577"
                                    android:typeface="serif"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/image6"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="wrap_content" />


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>